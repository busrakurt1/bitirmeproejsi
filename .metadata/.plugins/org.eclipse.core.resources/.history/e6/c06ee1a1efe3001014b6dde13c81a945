package com.cvbuilder.repository;

import com.cvbuilder.entity.JobPosting;
import org.springframework.data.domain.Pageable; // DOĞRU IMPORT BU OLMALI
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import java.util.List;
import java.util.Optional;

public interface JobPostingRepository extends JpaRepository<JobPosting, Long> {

    // Bir kullanıcıya ait tüm iş ilanları
    List<JobPosting> findByUserId(Long userId);

    // Kullanıcının ilanlarını tarihe göre (yeniden eskiye) sıralı getir
    List<JobPosting> findByUserIdOrderByCreatedAtDesc(Long userId);

    // Aynı URL daha önce eklenmiş mi kontrol etmek için
    List<JobPosting> findByUserIdAndUrl(Long userId, String url);

    // Kullanıcının en son eklediği ilanı
    Optional<JobPosting> findFirstByUserIdOrderByCreatedAtDesc(Long userId);

    // Sistemdeki EN SON eklenen ilan
    Optional<JobPosting> findTopByOrderByCreatedAtDesc();

    // Eski metot (Opsiyonel: searchMarketData varken buna gerek kalmayabilir)
    List<JobPosting> findTop100ByPositionContainingIgnoreCaseOrderByCreatedAtDesc(String area);

    /**
     * Pazar analizi için geniş kapsamlı arama motoru.
     * Loglardaki 'Conversion = %' hatasını önlemek için CONCAT yapısı temizlendi.
     */
    @Query("SELECT j FROM JobPosting j WHERE " +
           "LOWER(j.position) LIKE LOWER(:keyword) OR " +
           "LOWER(j.requiredSkills) LIKE LOWER(:keyword) OR " +
           "LOWER(j.cleanedText) LIKE LOWER(:keyword) " +
           "ORDER BY j.createdAt DESC")
    List<JobPosting> searchMarketData(@Param("keyword") String keyword, Pageable pageable);
}