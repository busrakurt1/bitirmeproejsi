package com.cvbuilder.external;

import com.fasterxml.jackson.databind.JsonNode;
import com.fasterxml.jackson.databind.ObjectMapper;
import org.jsoup.Connection;
import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.http.*;
import org.springframework.stereotype.Component;
import org.springframework.web.client.RestTemplate;

import java.io.IOException;
import java.util.*;

@Component
public class JobScraperClient {

    private static final Logger logger = LoggerFactory.getLogger(JobScraperClient.class);
    private final ObjectMapper objectMapper = new ObjectMapper();
    private final RestTemplate restTemplate;

    // Kariyer.net ve genel siteler için en kapsamlı selector listesi
    private static final String[] JOB_SELECTORS = {
        "section.job-detail-content",
        ".job-description",
        "#job-description",
        "div[class*='job-detail']",
        "div[class*='description']",
        ".ilan-detay",
        "article"
    };

    public JobScraperClient(RestTemplate restTemplate) {
        this.restTemplate = restTemplate;
    }

    public Map<String, String> fetchJobData(String url) {
        Map<String, String> result = new HashMap<>();
        result.put("url", url);
        result.put("scrapedAt", new Date().toString());

        logger.info("Fetching job data from URL: {}", url);

        try {
            // 1. ADIM: Jsoup ile Gelişmiş Scraping (Referrer ve Header taktiği ile)
            Map<String, String> scrapedData = improvedScrape(url);
            if (!isDataEmpty(scrapedData)) {
                logger.info("Successfully fetched data via Improved Jsoup Scraping");
                return scrapedData;
            }

            // 2. ADIM: Jsoup başarısızsa Kariyer.net API'sini dene
            if (url.contains("kariyer.net")) {
                Map<String, String> apiData = fetchFromKariyerNetApi(url);
                if (!isDataEmpty(apiData)) {
                    logger.info("Successfully fetched data via Kariyer.net API");
                    return apiData;
                }
            }

            // 3. ADIM: İkisi de başarısızsa Mock Data (B Planı)
            logger.warn("Scraping and API failed for URL: {}. Returning mock data.", url);
            return createMockJobData(url);

        } catch (Exception e) {
            logger.error("Critical error in fetchJobData: {}", e.getMessage());
            return createMockJobData(url);
        }
    }

    private Map<String, String> improvedScrape(String url) throws IOException {
        Map<String, String> data = new HashMap<>();
        
        // Kariyer.net engeline takılmamak için eski kodundaki çalışan ayarlar
        Connection.Response response = Jsoup.connect(url)
                .userAgent("Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36")
                .header("Accept-Language", "tr-TR,tr;q=0.9,en-US;q=0.8")
                .header("Accept", "text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8")
                .referrer("https://www.google.com/") // Google'dan gelmiş süsü veriyoruz
                .ignoreHttpErrors(true)
                .timeout(20000)
                .execute();

        if (response.statusCode() == 200) {
            Document doc = response.parse();
            
            // Başlık bilgisini al (Title'dan temizle)
            String pageTitle = doc.title();
            data.put("position", pageTitle.split("-")[0].trim());

            // Detaylı selector taraması
            for (String selector : JOB_SELECTORS) {
                Elements elements = doc.select(selector);
                if (!elements.isEmpty()) {
                    String content = elements.text();
                    if (content.length() > 100) {
                        data.put("description", content);
                        data.put("dataSource", "Jsoup (Improved Headers)");
                        
                        // Ekstra Meta Bilgileri
                        data.put("company", extractFromMeta(doc, "company", "og:site_name"));
                        data.put("location", extractFromMeta(doc, "location", "place"));
                        return data;
                    }
                }
            }
        }
        return data;
    }

    private Map<String, String> fetchFromKariyerNetApi(String url) {
        Map<String, String> result = new HashMap<>();
        try {
            String jobId = extractJobIdFromUrl(url);
            if (jobId == null) return result;

            String apiUrl = "https://www.kariyer.net/api/v2/jobs/" + jobId;
            
            HttpHeaders headers = new HttpHeaders();
            headers.set("User-Agent", "Mozilla/5.0 (Windows NT 10.0; Win64; x64) Chrome/120.0.0.0");
            headers.setAccept(Collections.singletonList(MediaType.APPLICATION_JSON));
            
            HttpEntity<String> entity = new HttpEntity<>(headers);
            ResponseEntity<String> response = restTemplate.exchange(apiUrl, HttpMethod.GET, entity, String.class);

            if (response.getStatusCode() == HttpStatus.OK && response.getBody() != null) {
                JsonNode json = objectMapper.readTree(response.getBody());
                result.put("position", json.path("title").asText(""));
                result.put("company", json.path("company").path("name").asText(""));
                result.put("description", json.path("description").asText(""));
                result.put("dataSource", "Kariyer.net API");
            }
        } catch (Exception e) {
            logger.warn("Kariyer.net API 404 or Error: {}", e.getMessage());
        }
        return result;
    }

    private String extractFromMeta(Document doc, String... keys) {
        for (String key : keys) {
            Element meta = doc.select("meta[name=" + key + "], meta[property=" + key + "]").first();
            if (meta != null) return meta.attr("content");
        }
        return "";
    }

    private String extractJobIdFromUrl(String url) {
        try {
            String[] parts = url.split("-");
            return parts[parts.length - 1].replaceAll("[^0-9]", "");
        } catch (Exception e) { return null; }
    }

    private boolean isDataEmpty(Map<String, String> data) {
        return data == null || data.isEmpty() || 
               data.getOrDefault("description", "").length() < 50;
    }

    private Map<String, String> createMockJobData(String url) {
        Map<String, String> mock = new HashMap<>();
        mock.put("url", url);
        mock.put("position", "Yazılım Geliştirme Uzmanı");
        mock.put("company", "CW Enerji (Mock)");
        mock.put("description", "Java ve Spring Boot bilen Bilgisayar Mühendisi aranıyor.");
        mock.put("dataSource", "Fallback Mock Data");
        return mock;
    }
}