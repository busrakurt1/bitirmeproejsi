spring:
  application:
    name: cv-builder-backend
  datasource:
    url: jdbc:postgresql://localhost:5432/cvbuilder
    username: admin
    password: password
    driver-class-name: org.postgresql.Driver
  jpa:
    hibernate:
      ddl-auto: create-drop
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true
    show-sql: true
  security:
    oauth2:
      client:
        registration:
          github:
            client-id: your-client-id
            client-secret: your-client-secret

server:
  port: 8080
  servlet:
    context-path: /api

logging:
  level:
    com.cvbuilder: DEBUG
    org.hibernate.SQL: DEBUG
    org.springframework.security: DEBUG

management:
  endpoints:
    web:
      exposure:
        include: health,info,metrics
  endpoint:
    health:
      show-details: always