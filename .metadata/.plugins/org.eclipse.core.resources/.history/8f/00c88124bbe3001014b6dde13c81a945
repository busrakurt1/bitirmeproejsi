package com.cvbuilder.external;

import com.fasterxml.jackson.databind.JsonNode;
import com.fasterxml.jackson.databind.ObjectMapper;
import org.jsoup.Connection;
import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.http.*;
import org.springframework.stereotype.Component;
import org.springframework.web.client.RestTemplate;

import java.io.IOException;
import java.util.*;

@Component
public class JobScraperClient {

    private static final Logger logger = LoggerFactory.getLogger(JobScraperClient.class);
    private final ObjectMapper objectMapper = new ObjectMapper();
    private final RestTemplate restTemplate;

    public JobScraperClient(RestTemplate restTemplate) {
        this.restTemplate = restTemplate;
    }

    public Map<String, String> fetchJobData(String url) {
        Map<String, String> result = new HashMap<>();
        result.put("url", url);
        result.put("scrapedAt", new Date().toString());

        logger.info("İş ilanı çekiliyor: {}", url);

        try {
            // 1. ADIM: Jsoup ile Gelişmiş Kazıma (Eski kodundaki taktikler)
            Map<String, String> scrapedData = advancedJsoupScrape(url);
            if (!isDataEmpty(scrapedData)) {
                logger.info("Veri Jsoup ile başarıyla çekildi.");
                return scrapedData;
            }

            // 2. ADIM: Jsoup başarısızsa Kariyer.net API'sini dene
            if (url.contains("kariyer.net")) {
                Map<String, String> apiData = fetchFromKariyerNetApi(url);
                if (!isDataEmpty(apiData)) {
                    logger.info("Veri Kariyer.net API ile başarıyla çekildi.");
                    return apiData;
                }
            }

            // 3. ADIM: Her şey başarısız olursa AI analizi için minimum veri üret
            logger.warn("İlan içeriği çekilemedi, manuel veri üretiliyor.");
            return createFallbackData(url);

        } catch (Exception e) {
            logger.error("Hata oluştu: {}", e.getMessage());
            return createFallbackData(url);
        }
    }

    private Map<String, String> advancedJsoupScrape(String url) throws IOException {
        Map<String, String> data = new HashMap<>();
        
        // Kariyer.net'in bot korumasını geçmek için en kritik ayarlar
        Connection.Response response = Jsoup.connect(url)
                .userAgent("Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36")
                .header("Accept-Language", "tr-TR,tr;q=0.9,en-US;q=0.8")
                .header("Accept", "text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8")
                .referrer("https://www.google.com/") // Google'dan gelmiş gibi gösterir
                .ignoreHttpErrors(true)
                .timeout(20000)
                .execute();

        if (response.statusCode() == 200) {
            Document doc = response.parse();
            data.put("position", doc.title().split("-")[0].trim());
            
            // Kariyer.net'in güncel ilan metni alanları
            String description = doc.select("section.job-detail-content, .job-description, div[class*='job-detail']").text();
            
            if (description.length() > 100) {
                data.put("description", description);
                data.put("dataSource", "Jsoup Scraping");
            }
        }
        return data;
    }

    private Map<String, String> fetchFromKariyerNetApi(String url) {
        Map<String, String> result = new HashMap<>();
        try {
            String jobId = extractJobIdFromUrl(url);
            if (jobId == null) return result;

            String apiUrl = "https://www.kariyer.net/api/v2/jobs/" + jobId;
            
            HttpHeaders headers = new HttpHeaders();
            headers.set("User-Agent", "Mozilla/5.0");
            headers.setAccept(Collections.singletonList(MediaType.APPLICATION_JSON));
            
            HttpEntity<String> entity = new HttpEntity<>(headers);
            ResponseEntity<String> response = restTemplate.exchange(apiUrl, HttpMethod.GET, entity, String.class);

            if (response.getStatusCode() == HttpStatus.OK && response.getBody() != null) {
                JsonNode json = objectMapper.readTree(response.getBody());
                result.put("position", json.path("title").asText());
                result.put("description", json.path("description").asText());
                result.put("dataSource", "Kariyer.net API");
            }
        } catch (Exception e) {
            logger.warn("API Hatası (Muhtemelen 404): {}", e.getMessage());
        }
        return result;
    }

    private String extractJobIdFromUrl(String url) {
        try {
            String[] parts = url.split("-");
            return parts[parts.length - 1].replaceAll("[^0-9]", "");
        } catch (Exception e) { return null; }
    }

    private boolean isDataEmpty(Map<String, String> data) {
        return data == null || data.isEmpty() || data.getOrDefault("description", "").length() < 50;
    }

    private Map<String, String> createFallbackData(String url) {
        Map<String, String> mock = new HashMap<>();
        mock.put("url", url);
        mock.put("position", "İş İlanı (İçerik Çekilemedi)");
        mock.put("description", "Sistem ilan içeriğini otomatik çekemedi. Lütfen ilanı manuel analiz edin.");
        return mock;
    }
}